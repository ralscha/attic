<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//ACTIVEMQ//DTD//EN" "http://activemq.codehaus.org/dtd/activemq.dtd">
<beans>

  <!-- A Berkeley DB persistence example -->
  <broker>
    <connector>
      <tcpServerTransport uri="tcp://localhost:62003"/>
    </connector>

    <discoveryAgent>
      <zeroconfDiscovery type="_activemq.broker.development."/>
    </discoveryAgent>

    <discoveryNetworkConnector/>

    <persistence>
      <vmPersistence/>
    </persistence>
  </broker>

</beans>